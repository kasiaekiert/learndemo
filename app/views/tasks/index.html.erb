<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Content</th>
        <th scope="col">Deadline</th>
        <th scope="col">Done?</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr scope="row">
          <td style="width: 15%">
            <%= task.name %>
          </td>
          <td style="width: 25%">
            <%= task.content %>
            <div data-controller="popover" data-popover-url-value="<%= card_path %>">You can load popover with AJAX. For instance, this is my
              <a href="/tasks" data-action="mouseenter->popover#show mouseleave->popover#hide">profile card</a>
            </div>
          </td>
          <td style="width: 15%">
            <%= task.deadline %>
          </td>
          <td style="width: 10%">
            <%= task.done %>
          </td>
          <td style="width: 25%">
            <%= link_to "Show", task, class: "btn btn-secondary" %>
            <%= link_to "Delete", task, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
            <%= link_to "Edit", edit_task_path(task), class: "btn btn-success btn-block", data: { turbo_frame: "remote_modal" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to "New task", new_task_path, class: "btn btn-primary", data: { turbo_frame: "remote_modal" }%>
</p>
